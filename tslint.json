{
    "rules": {

        // THD preference to use single-quote for strings
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],

        // Preference for large monitors
        "max-line-length": [true, 250],

        // For files containing multiple DTO classes
        "max-classes-per-file": [true, 5],

        // To prefer Array<> instead of [] for every type of array.
        "array-type": [true, "generic"],

        // For certain third-party DTOs
        "variable-name": [true, "allow-snake-case"],

        // To allow Chai syntax for assertions
        "no-unused-expression": false,

        // To allow third-party pure JavaScript libraries (otherwise, do always use @types for imports)
        "no-var-requires": false,

        // To allow for console.log() during development
        "no-console": false,

        // Loosened formatting rules to reduce novice dev confusion
        "no-trailing-whitespace": false,
        "no-consecutive-blank-lines": false,
        "prefer-const": false,
        "typedef-whitespace": false,
    },

    // Default TSLint behavior for everything else.
    "extends": [
        "tslint:recommended"
    ]
}